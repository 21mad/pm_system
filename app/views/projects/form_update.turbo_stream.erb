<%= turbo_stream.update "remote_modal_body" do %>
    <div style="color: red">
      <h4>Проверьте заполение полей:</h4>
    </div>
  <%= form_with model: @project do |form| %>
    <div>
      <%= form.label :name, 'Название проекта*', style: "display: block; color: red" %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div>
      <%= form.label :description, 'Описание проекта', style: "display: block" %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div>
      <%= form.label :deadline, 'Дедлайн*', style: "display: block; color: red" %>
      <%= form.date_field :deadline, class: 'form-control' %>
    </div>
    <br>
    <div class="mb-3">
      <%= form.submit 'Создать проект', class: 'btn btn-success' %>
    </div>
  <% end %>
<% end %>