<%= render "remote_modal", title: "Новый проект" do %>
  <%# <h1>Создание проекта</h1> %>

  <%# <%= render "form", project: @project  %>
  <%= form_with model: @project do |form| %>
      <div>
        <%= form.label :name, 'Название проекта', style: "display: block" %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div>
        <%= form.label :description, 'Описание проекта', style: "display: block" %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>

      <div>
        <%= form.label :deadline, 'Дедлайн', style: "display: block" %>
        <%= form.date_field :deadline, class: 'form-control' %>
      </div>
      <br>
    <div class="mb-3">
      <%= form.submit 'Создать проект', class: 'btn btn-success' %>
    </div>
  <% end %>
<% end %>
