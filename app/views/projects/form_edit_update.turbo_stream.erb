<%= turbo_stream.update "remote_modal_body" do %>
    <%= form_with model: @project do |form|%>
      <% if @project.errors.any? %>
      <div style="color: red">
        <h2>При сохранении проекта возникли ошибки:</h2>

        <ul>
          <% @project.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, 'Название проекта', style: "display: block" %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div>
      <%= form.label :description, 'Описание проекта', style: "display: block" %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div>
      <%= form.label :deadline, 'Дедлайн', style: "display: block" %>
      <%= form.date_field :deadline, class: 'form-control' %>
    </div>

    <div>
      <%= form.label :end_date, 'Завершить проект?', style: "display: block" %>
      <%= form.date_field :end_date, class: 'form-control' %>
    </div>
    <br>
    <div>
      <%= form.submit 'Сохранить изменения', class: 'btn btn-success' %>
      <%= link_to "Удалить проект", @project, class: "btn btn-danger", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Вы уверены?" } %>
    </div>
  <% end %>
<% end %>